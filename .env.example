# ===========================================
# LLM Provider API Keys
# ===========================================

# Google Gemini (default provider)
GOOGLE_API_KEY=your_gemini_api_key_here

# OpenAI (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Groq (optional)
GROQ_API_KEY=your_groq_api_key_here

# OpenRouter (optional - provides access to multiple models)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_SITE_URL=https://garantis.com.br
OPENROUTER_SITE_NAME=GARANTIS_AI_AGENTS

# ===========================================
# Default Configuration
# ===========================================

# Default LLM provider (gemini, openai, groq, openrouter)
DEFAULT_PROVIDER=gemini

# Default model (uses provider default if not specified)
DEFAULT_MODEL=gemini-2.0-flash

# Default prompt version
DEFAULT_PROMPT_VERSION=v3

# ===========================================
# API Configuration
# ===========================================

HOST=0.0.0.0
PORT=8080
LOG_LEVEL=INFO

# ===========================================
# Optional: Supabase for caching (future)
# ===========================================
# SUPABASE_URL=https://xxx.supabase.co
# SUPABASE_ANON_KEY=xxx
